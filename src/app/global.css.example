/* app/globals.css */
/* Global styles and Tailwind CSS imports for SnapFAQ Hub */

@tailwind base;
@tailwind components;
@tailwind utilities;

/* 
  Base layer: fundamental styling that affects the entire application
  These styles create a consistent foundation across all browsers
*/
@layer base {
  /* 
    CSS custom properties (variables) for consistent theming
    These can be easily changed to implement dark mode or rebrand the application
  */
  :root {
    --background: 0 0% 100%;           /* Pure white background */
    --foreground: 222.2 84% 4.9%;     /* Very dark gray for text */
    --card: 0 0% 100%;                /* Card background color */
    --card-foreground: 222.2 84% 4.9%; /* Text color on cards */
    --popover: 0 0% 100%;             /* Popover background */
    --popover-foreground: 222.2 84% 4.9%; /* Popover text color */
    --primary: 221.2 83.2% 53.3%;     /* Primary brand color (blue) */
    --primary-foreground: 210 40% 98%; /* Text on primary background */
    --secondary: 210 40% 96%;          /* Secondary color (light gray) */
    --secondary-foreground: 222.2 84% 4.9%; /* Text on secondary background */
    --muted: 210 40% 96%;             /* Muted background color */
    --muted-foreground: 215.4 16.3% 46.9%; /* Muted text color */
    --accent: 210 40% 96%;            /* Accent color for highlights */
    --accent-foreground: 222.2 84% 4.9%; /* Text on accent background */
    --destructive: 0 84.2% 60.2%;     /* Error/danger color (red) */
    --destructive-foreground: 210 40% 98%; /* Text on destructive background */
    --border: 214.3 31.8% 91.4%;      /* Border color for inputs and cards */
    --input: 214.3 31.8% 91.4%;       /* Input field background */
    --ring: 221.2 83.2% 53.3%;        /* Focus ring color */
    --radius: 0.5rem;                 /* Default border radius */
  }

  /* 
    Dark mode color scheme (for future implementation)
    Uncomment and customize these when adding dark mode support
  */
  .dark {
    --background: 222.2 84% 4.9%;
    --foreground: 210 40% 98%;
    --card: 222.2 84% 4.9%;
    --card-foreground: 210 40% 98%;
    --popover: 222.2 84% 4.9%;
    --popover-foreground: 210 40% 98%;
    --primary: 217.2 91.2% 59.8%;
    --primary-foreground: 222.2 84% 4.9%;
    --secondary: 217.2 32.6% 17.5%;
    --secondary-foreground: 210 40% 98%;
    --muted: 217.2 32.6% 17.5%;
    --muted-foreground: 215 20.2% 65.1%;
    --accent: 217.2 32.6% 17.5%;
    --accent-foreground: 210 40% 98%;
    --destructive: 0 62.8% 30.6%;
    --destructive-foreground: 210 40% 98%;
    --border: 217.2 32.6% 17.5%;
    --input: 217.2 32.6% 17.5%;
    --ring: 224.3 76.3% 94.1%;
  }

  /* 
    Base HTML element styling
    These create consistent defaults across different browsers
  */
  * {
    @apply border-border;
  }

  body {
    @apply bg-background text-foreground;
    /* Prevent horizontal scrolling on mobile devices */
    overflow-x: hidden;
  }

  /* 
    Improve focus visibility for keyboard navigation accessibility
    This ensures users navigating with keyboard can clearly see focused elements
  */
  *:focus-visible {
    @apply outline-none ring-2 ring-ring ring-offset-2 ring-offset-background;
  }

  /* 
    Smooth scrolling behavior for better user experience
    When users click anchor links, the page will scroll smoothly instead of jumping
  */
  html {
    scroll-behavior: smooth;
  }
}

/* 
  Components layer: reusable component classes
  These provide consistent styling patterns throughout the application
*/
@layer components {
  .card {
    background-color: var(--color-white);
    color: var(--color-foreground);
    border-radius: var(--rounded-lg);
    border: 1px solid var(--color-border);
    box-shadow: var(--shadow-sm);
  }

  .card-header {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-1-5);
    padding: var(--spacing-6);
  }

  .card-title {
    font-size: var(--text-2xl);
    font-weight: var(--font-semibold);
    line-height: var(--leading-none);
    letter-spacing: var(--tracking-tight);
  }

  .card-description {
    font-size: var(--text-sm);
    color: var(--color-muted-foreground);
  }

  .card-content {
    padding: var(--spacing-6);
    padding-top: 0;
  }

  .card-footer {
    display: flex;
    align-items: center;
    padding: var(--spacing-6);
    padding-top: 0;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--rounded-md);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    transition: var(--transition-colors);
  }

  .btn-primary {
    background-color: var(--color-primary);
    color: var(--color-primary-foreground);
    height: var(--spacing-10);
    padding: 0 var(--spacing-4);
  }

  .btn-secondary {
    background-color: var(--color-secondary);
    color: var(--color-secondary-foreground);
    height: var(--spacing-10);
    padding: 0 var(--spacing-4);
  }

  .btn-outline {
    background-color: var(--color-background);
    color: var(--color-foreground);
    border: 1px solid var(--color-input);
    height: var(--spacing-10);
    padding: 0 var(--spacing-4);
  }

  .btn-sm {
    height: var(--spacing-9);
    padding: 0 var(--spacing-3);
    font-size: var(--text-xs);
  }

  .btn-lg {
    height: var(--spacing-11);
    padding: 0 var(--spacing-8);
  }

  .input {
    display: flex;
    height: var(--spacing-10);
    width: 100%;
    border-radius: var(--rounded-md);
    border: 1px solid var(--color-input);
    background-color: var(--color-background);
    padding: 0 var(--spacing-3);
    font-size: var(--text-sm);
  }

  .textarea {
    min-height: 80px;
    width: 100%;
    border-radius: var(--rounded-md);
    border: 1px solid var(--color-input);
    background-color: var(--color-background);
    padding: var(--spacing-2) var(--spacing-3);
    font-size: var(--text-sm);
  }

  .badge {
    display: inline-flex;
    align-items: center;
    border-radius: var(--rounded-full);
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    padding: 0 var(--spacing-2-5);
    height: var(--spacing-5);
    transition: var(--transition-colors);
    border: 1px solid transparent;
  }

  .badge-outline {
    color: var(--color-foreground);
    border-color: var(--color-border);
  }

  .spinner {
    width: 1rem;
    height: 1rem;
    border: 2px solid var(--color-foreground);
    border-top-color: transparent;
    border-radius: 9999px;
    animation: spin 0.8s linear infinite;
  }

  .skeleton {
    background-color: var(--color-muted);
    border-radius: var(--rounded-md);
    animation: pulse 1.5s infinite;
  }

  .chat-message {
    max-width: 100%;
    border-radius: var(--rounded-lg);
    padding: var(--spacing-4);
    font-size: var(--text-sm);
  }

  .chat-message-user {
    background-color: var(--color-primary);
    color: var(--color-primary-foreground);
    margin-left: auto;
    max-width: 80%;
  }

  .chat-message-assistant {
    background-color: var(--color-muted);
    color: var(--color-muted-foreground);
    margin-right: auto;
    max-width: 80%;
  }

  .faq-item {
    border-radius: var(--rounded-lg);
    background-color: var(--color-white);
    padding: var(--spacing-4);
    border: 1px solid var(--color-border);
    box-shadow: var(--shadow-sm);
    transition: box-shadow 0.2s;
  }

  .faq-item:hover {
    box-shadow: var(--shadow-md);
  }

  .faq-question {
    font-weight: var(--font-medium);
    color: var(--color-foreground);
    margin-bottom: var(--spacing-2);
  }

  .faq-answer {
    font-size: var(--text-sm);
    color: var(--color-muted-foreground);
    line-height: var(--leading-relaxed);
  }

  .page-item {
    position: relative;
    overflow: hidden;
    border-radius: var(--rounded-lg);
    border: 1px solid var(--color-border);
    background-color: var(--color-white);
    transition: all 0.2s;
  }

  .page-item:hover {
    box-shadow: var(--shadow-lg);
    border-color: var(--color-primary-200);
  }

  .page-item-header {
    padding: var(--spacing-4);
    border-bottom: 1px solid var(--color-border);
    background-color: var(--color-muted);
  }

  .page-item-content {
    padding: var(--spacing-4);
  }

  .search-highlight {
    background-color: #fef08a; /* yellow-100 */
    color: #713f12; /* yellow-900 */
    padding: 0.125rem 0.25rem;
    border-radius: var(--rounded-sm);
  }
}

/* 
  Utilities layer: custom utility classes
  These provide specific functionality that can be applied anywhere
*/
@utility container-sm {
  max-width: 640px;
  margin-left: auto;
  margin-right: auto;
  padding-left: 1rem;
  padding-right: 1rem;
}

@utility container-md {
  max-width: 768px;
  margin-left: auto;
  margin-right: auto;
  padding-left: 1rem;
  padding-right: 1rem;
}

@utility container-lg {
  max-width: 1024px;
  margin-left: auto;
  margin-right: auto;
  padding-left: 1rem;
  padding-right: 1rem;
}

@utility container-xl {
  max-width: 1280px;
  margin-left: auto;
  margin-right: auto;
  padding-left: 1rem;
  padding-right: 1rem;
}

@utility text-truncate {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

@utility text-truncate-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

@utility text-truncate-3 {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

@utility text-gradient {
  background-image: linear-gradient(to right, var(--color-primary), #9333ea); /* purple-600 */
  background-clip: text;
  color: transparent;
}

@utility scrollbar-thin {
  scrollbar-width: thin;
  scrollbar-color: rgb(203 213 225) transparent;
}

@utility scrollbar-thin {
  &::-webkit-scrollbar {
    width: 6px;
  }

  &::-webkit-scrollbar-track {
    background: transparent;
  }

  &::-webkit-scrollbar-thumb {
    background-color: rgb(203 213 225);
    border-radius: 3px;
  }

  &::-webkit-scrollbar-thumb:hover {
    background-color: rgb(148 163 184);
  }
}

@utility animate-fade-in {
  animation: fadeIn 0.3s ease-in-out;
}

@utility animate-slide-up {
  animation: slideUp 0.3s ease-out;
}

@utility animate-slide-down {
  animation: slideDown 0.3s ease-out;
}


/* 
  Custom keyframe animations
  These create smooth, professional transitions and interactions
*/
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 
  Print styles for PDF exports
  These ensure your content looks good when printed or exported to PDF
*/
@media print {
  .no-print {
    display: none !important;
  }

  .print-break {
    page-break-before: always;
  }

  body {
    -webkit-print-color-adjust: exact;
    print-color-adjust: exact;
  }
}